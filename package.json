{
  "name": "nifti-reader-js",
  "version": "0.6.2",
  "description": "A JavaScript NIfTI file format reader.",
  "main": "build/nifti-reader.js",
  "types": "build/nifti.d.ts",
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "esbuild": "^0.17.15",
    "fflate": "*"
  },
  "devDependencies": {
    "jsdoc-to-markdown": "*",
    "mocha": "*",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "test": "mocha --timeout 0 tests",
    "typecheck": "tsc -b",
    "bundle": "esbuild ./src/nifti.js --bundle --tsconfig=tsconfig.json --outdir=build --minify",
    "build": "rm -rf build && mkdir build && npm run typecheck && npm run bundle",
    "release": "rm release/current/*.js; cp build/*.js release/current/.",
    "doc": "rm -rf build; mkdir build; ./node_modules/.bin/jsdoc2md src/*.js > build/docs.md"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rii-mango/NIFTI-Reader-JS.git"
  },
  "keywords": [
    "JavaScript",
    "NIFTI"
  ],
  "author": "Michael Martinez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rii-mango/NIFTI-Reader-JS/issues"
  },
  "homepage": "https://github.com/rii-mango/NIFTI-Reader-JS"
}
